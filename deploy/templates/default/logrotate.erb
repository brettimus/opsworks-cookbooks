<% @log_dirs.each do |dir| %><%= dir %>/*.log <% end %> {
        daily
        missingok
        rotate <%= node[:logrotate][:rotate] %>
        compress
        delaycompress
        <% if node[:logrotate][:dateformat] -%>
        dateext
        dateformat <%= node[:logrotate][:dateformat] %>
        <% end -%>
        notifempty
        copytruncate
        sharedscripts
        <% if dir.to_s == '/srv/www/switchboard/shared/log' %>
        postrotate
                /bin/bash /srv/www/switchboard/current/lib/s3logs.sh events
        endscript
        <% end %>
}
